<% layout('layouts/boilerplate') %>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item" aria-current="page"> <a href="/private">Private Roadmap</a> </li>
      <li class="breadcrumb-item active" aria-current="page"> <a href="/private/<%=reqRoadmap._id%>/info">Roadmap Info</a> </li>
    </ol>
</nav>

<div id="mainInfoDiv" class="shadow-lg p-3 bg-body rounded">
    <div id="infoInnerDiv">
        <div id="mainDiv">
            <div id="headingDiv">
                <h2> <%= reqRoadmap.title %>  </h2>
            </div>
          <div id="idDiv" class="mb-2">
              <strong>UniqueId:</strong> &nbsp
              <textarea id="uId" cols="30" rows="1" readonly> <%= reqRoadmap._id %> </textarea>
              <button id="copyId" data-bs-toggle="tooltip" data-bs-placement="top" title="Copy To Clipboard">
                <i id="initial" class="bi bi-clipboard"></i>
                <i id="final" class="bi bi-check2 hideClass"></i>
              </button>
          </div>
          <div class="mb-2"> <strong>Author:</strong> <%= reqRoadmap.author.name %> </div>
          <p><strong>Date Created:</strong> <%= reqRoadmap.dateCreated %> </p>
            <p class="mb-2"> <strong>Description : </strong><%= reqRoadmap.description %> </p>
            <p class="mb-2"> <strong>Subsection Count:</strong> <%= reqRoadmap.section.length %> </p>
        </div>
    </div>
</div>