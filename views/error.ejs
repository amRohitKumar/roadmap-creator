<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">
                <%= err.message %>
            </h4>
            <hr>
            <p class="mb-0">
                Something went wrong !
            </p>
            <p class="mb-0">
                <%= err.stack %> 
            </p>
        </div>
    </div>
</div>